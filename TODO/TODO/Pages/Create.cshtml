@page
@model CreateModel
@{
    ViewData["Title"] = "Create a TODO Item";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
<div>
    <label>Title: </label>
    <input type="text" asp-for="TODOItem.Title"></input>

    <label>Is Completed?</label>
    <input type="checkbox" asp-for="TODOItem.IsCompleted"></input>
</div>
<input type="submit" value="Add TODO"/>
</form>
